<!-- GanttChart.WPF/Resources/Colors.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- ОСНОВНЫЕ ЦВЕТА (Светлая тема, стиль MS Project)                 -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <!-- Фоновые цвета -->
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SidebarBackgroundColor">#F5F5F5</Color>
    <Color x:Key="HeaderBackgroundColor">#E8E8E8</Color>
    <Color x:Key="GridLineColor">#E0E0E0</Color>
    <Color x:Key="WeekendBackgroundColor">#F9F9F9</Color>

    <!-- Акцентные цвета -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <Color x:Key="PrimaryLightColor">#4DA3E0</Color>
    <Color x:Key="PrimaryDarkColor">#005A9E</Color>
    <Color x:Key="AccentColor">#107C10</Color>

    <!-- Текст -->
    <Color x:Key="TextPrimaryColor">#1A1A1A</Color>
    <Color x:Key="TextSecondaryColor">#666666</Color>
    <Color x:Key="TextDisabledColor">#A0A0A0</Color>

    <!-- Gantt Chart специфичные -->
    <Color x:Key="TaskBarColor">#4682B4</Color>
    <Color x:Key="TaskBarProgressColor">#7ed77f</Color>
    <Color x:Key="TaskBarBorderColor">#3A6E9A</Color>
    <Color x:Key="GroupTaskColor">#333333</Color>
    <Color x:Key="MilestoneColor">#FF6600</Color>
    <Color x:Key="CriticalPathColor">#D32F2F</Color>
    <Color x:Key="SlackColor">#90CAF9</Color>
    <Color x:Key="TodayLineColor">#FF0000</Color>
    <Color x:Key="RelationLineColor">#666666</Color>
    <Color x:Key="SelectionColor">#0078D4</Color>

    <!-- Статусы -->
    <Color x:Key="SuccessColor">#107C10</Color>
    <Color x:Key="WarningColor">#FF8C00</Color>
    <Color x:Key="ErrorColor">#D32F2F</Color>
    <Color x:Key="TaskCompletedColor">#00aa25</Color>
    <Color x:Key="TaskCompletedBorderColor">#009f19</Color>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- КИСТИ (SolidColorBrush)                                         -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <!-- Фоны -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLineColor}"/>
    <SolidColorBrush x:Key="WeekendBackgroundBrush" Color="{StaticResource WeekendBackgroundColor}"/>

    <!-- Акценты -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

    <!-- Текст -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>

    <!-- Gantt -->
    <SolidColorBrush x:Key="TaskBarBrush" Color="{StaticResource TaskBarColor}"/>
    <SolidColorBrush x:Key="TaskBarProgressBrush" Color="{StaticResource TaskBarProgressColor}"/>
    <SolidColorBrush x:Key="TaskBarBorderBrush" Color="{StaticResource TaskBarBorderColor}"/>
    <SolidColorBrush x:Key="GroupTaskBrush" Color="{StaticResource GroupTaskColor}"/>
    <SolidColorBrush x:Key="MilestoneBrush" Color="{StaticResource MilestoneColor}"/>
    <SolidColorBrush x:Key="CriticalPathBrush" Color="{StaticResource CriticalPathColor}"/>
    <SolidColorBrush x:Key="SlackBrush" Color="{StaticResource SlackColor}"/>
    <SolidColorBrush x:Key="TodayLineBrush" Color="{StaticResource TodayLineColor}"/>
    <SolidColorBrush x:Key="RelationLineBrush" Color="{StaticResource RelationLineColor}"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>

    <!-- Статусы -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    
    <!-- Зелёный для завершённых задач (100%) -->
    <SolidColorBrush x:Key="TaskCompletedBrush" Color="{StaticResource TaskCompletedColor}"/>
    <SolidColorBrush x:Key="TaskCompletedBorderBrush" Color="{StaticResource TaskCompletedBorderColor}"/>
    
    <!-- Красный для дедлайна -->
    <Color x:Key="DeadlineColor">#F44336</Color>
    <Color x:Key="DeadlineGlowColor">#33F44336</Color>
    <SolidColorBrush x:Key="DeadlineBrush" Color="{StaticResource DeadlineColor}"/>
    <SolidColorBrush x:Key="DeadlineGlowBrush" Color="{StaticResource DeadlineGlowColor}"/>
    
    <!-- Цвет для просроченных задач -->
    <Color x:Key="OverdueColor">#D32F2F</Color>
    <SolidColorBrush x:Key="OverdueBrush" Color="{StaticResource OverdueColor}"/>
    
    <!-- Цвет для заметок -->
    <Color x:Key="NoteTextColor">#757575</Color>
    <SolidColorBrush x:Key="NoteTextBrush" Color="{StaticResource NoteTextColor}"/>

</ResourceDictionary>