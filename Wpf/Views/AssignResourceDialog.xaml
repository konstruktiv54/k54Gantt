<!-- GanttChart.WPF/Views/AssignResourceDialog.xaml -->
<Window x:Class="Wpf.Views.AssignResourceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Wpf.Converters"
        mc:Ignorable="d"
        Title="Назначить ресурсы"
        Height="400"
        Width="350"
        MinHeight="300"
        MinWidth="300"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <converters:HexToColorConverter x:Key="HexToColorConverter"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с именем задачи -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Задача:" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="11"/>
            <TextBlock x:Name="TaskNameText"
                       Text="Название задачи"
                       FontSize="14"
                       FontWeight="SemiBold"
                       TextTrimming="CharacterEllipsis"/>
        </StackPanel>

        <!-- Список ресурсов с чекбоксами -->
        <GroupBox Grid.Row="1" Header="Доступные ресурсы">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ResourcesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8,6" 
                                    BorderBrush="{StaticResource GridLineBrush}"
                                    BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsAssigned, Mode=TwoWay}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0"/>

                                    <!-- Цвет ресурса -->
                                    <Border Grid.Column="1"
                                            Width="16" Height="16"
                                            CornerRadius="2"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding Resource.ColorHex, 
                                                Converter={StaticResource HexToColorConverter}, 
                                                FallbackValue=#4682B4}"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- Имя и инициалы -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Resource.Name}" 
                                                   FontWeight="Medium"/>
                                        <TextBlock FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}">
                                            <Run Text="{Binding Resource.Initials, Mode=OneWay}"/>
                                            <Run Text=" · "/>
                                            <Run Text="{Binding Resource.Role, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Отмена" 
                    Width="80"
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button Content="Применить" 
                    Width="100"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="ApplyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>